<div class="container-fluid">
  <%= render 'shared/filter' %>
  <br>
  <div class="cards-venue col-12 col-md-7">
    <% @venues.each do |venue| %>
    <%= link_to venue_path(venue) do %>
    <div class="card-venue">
      <%= image_tag "venues/rooftop.jpg", class: "card-venue-img" %>
      <div class="card-venue-infos">
        <h3 class="text-beige"><%= venue.name %></h3>
        <p>Description:<%= venue.description %></p>
        <p>Capacity:<%= venue.capacity %></p>
        <p>PRICE:<%= venue.hourly_price %>$ / h</p>
      </div>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
